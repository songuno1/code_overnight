#include <stdio.h>
#include <Windows.h>

int A, B;
int Cnt;

bool isEnd(){
	int i, u;
	int Y, X, N;
	char m[200][200 + 1];

	FILE *inn = fopen("MAP.TXT", "r");

	fscanf(inn, "%d%d%d", &Y, &X, &N);
	for (i = 0; i < Y; i++) fscanf(inn, "%s", m[i]);

	for (i = 0; i < Y; i++) for (u = 0; u < X; u++) if (!(m[i][u] == 'A' || m[i][u] == 'B' || m[i][u] == 'a' || m[i][u] == 'b')) return false;
	return true;
}

bool p = true;

void make_decide(int y, int x, char c){
	FILE *out = fopen("SELECTION.TXT", "w");

	if (c == 'D'){
		fprintf(out, "%c %d %d %d\n", ((p ^ 1) ? 'A' : 'B'), 2, y, x);
		fprintf(out, "%d %d", A, B);
	}

	else{
		fprintf(out, "%c %d %d %d\n", ((p) ? 'A' : 'B'), ((c == 'Y') ? 1 : 0), y, x);
		fprintf(out, "%d %d", A, B);
	}

	fclose(out);
}


bool check(){
	int in;

	FILE *inn = fopen("RESULT.TXT", "r");

	fscanf(inn, "%d", &in);
	if (in == -1) return false;

	if (in == 2) p ^= true, Cnt = -1;
	fscanf(inn, "%d%d", &A, &B);

	return true;
}


int main(){
	int i, u;
	char c[2];

	Cnt = 0;
	while (!isEnd()){
		system("display.exe");
		printf("\nSCORE A %d - %d B \n", A, B);

		if (Cnt == 1){
			printf("%c's Defense! \n", (p ^ 1) ? 'A' : 'B');

			while (true){
				printf("Y? ");
				scanf("%d", &i);
				printf("X? ");
				scanf("%d", &u);
				c[0] = 'D';

				make_decide(i, u, c[0]);
				system("process.exe");
				if (check()) break;
			}
		}


		else{
			printf("%c's Turn! \n", (p) ? 'A' : 'B');

			while (true){
				printf("Y? ");
				scanf("%d", &i);
				printf("X? ");
				scanf("%d", &u);
				while (true){
					printf("Mine?(Y/N) ");
					scanf("%s", c);
					if (c[0] == 'Y' || c[0] == 'N') break;
				}

				make_decide(i, u, c[0]);
				system("process.exe");
				if (check()) break;
			}

			Cnt++;
		}
	}

	if (A == B) printf("Draw!");
	else if (A>B) printf("A Wins!");
	else if (A<B) printf("B Wins!");

	printf("Please any key to input");
	scanf("%d", &i);

	return 0;
}
